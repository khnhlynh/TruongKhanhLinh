<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TruongKhanhLinh</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TruongKhanhLinh.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TruongKhanhLinh</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - TruongKhanhLinh - <a asp-area="" asp-controller="Home" asp-action="THÔNG TIN SINH VIÊN">THÔNG TIN SINH VIÊN</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<div class="d-flex flex-column">
    <h1 class="text-center my-5 text-uppercase">THONG TIN SINH VIEN</h1>
    <div class="col-12">
        <div class="d-flex flex-row justify-content-center gap-5">
            <div class="col-4 px-5 border rounded-3 d-flex flex-column justify-content-center shadow p-3 mb-5">
                <form action="/Home/Index" method="post">
                    <div class="mb-3">
                        <label for="hoten" class="form-label">Họ Tên</label>
                        <input type="text" class="form-control" id="hoten" name="hoten" value="@ViewData["họ tên"]" aria-describedby="text">
                    </div>
                    <div class="mb-3">
                        <label for="ngaysinh" class="form-label">Ngày Sinh</label>
                        <input type="text" class="form-control" id="ngaysinh" name="ngaysinh" value="@ViewData["ngày sinh"]" aria-describedby="text">
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="text" class="form-control" id="email" name="email" value="@ViewData["email"]" aria-describedby="text">
                    </div>
                    <div class="mb-3">
                        <label for="sodienthoai" class="form-label">Số điện thoại</label>
                        <input type="number" class="form-control" id="sodienthoai" name="sodienthoai" value="@ViewData["sô điện thoại"]" aria-describedby="text">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<div class="container mt-5">
    <div class="d-flex flex-row justify-content-between gap-3">
        <div class="col-7 border-1 rounded-3 shadow-lg px-5" style="height: 680px;">
            <h2 class="fw-bold text-center pt-5 pb-4">Danh sách sản phẩm</h2>
            <hr/>
            <div style="max-height: 360px; overflow-y: auto;" class="px-3">
                <table class="table table-striped overflow-scroll">
                    <thead>
                        <tr class="text-center">
                            <th scope="col">STT</th>
                            <th scope="col">Tên sản phẩm</th>
                            <th scope="col">Số lượng</th>
                            <th scope="col">Đơn giá</th>
                            <th scope="col" class="text-end">Tạm tính</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            int i = 0;
                            foreach (var item in Model)
                            {
                                i++;
                                <tr>
                                    <td class="text-center">@i</td>
                                    <td class="text-center">@item.TenSanPham</td>
                                    <td class="text-center">@item.SoLuong</td>
                                    <td class="text-center">@item.DonGia.ToString("N0")</td>
                                    <td class="text-end">@item.Giamgia.ToString("N0")</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center">Không có dữ liệu</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <hr />
            @if (Model != null)
            {
                @*double tongCong = 0;
                foreach (var item in Model)
                {
                    tongCong += item.TamTinh;
                }*@
                <div class="d-flex flex-column text-end">
                    <p class="fw-bold float-end px-3" id="TongThanhTien">Tổng thành tiền: @Model.Sum.ToString("N0") đồng</p>
                    @*<p class="fw-bold float-end px-3" id="TongThanhTien">Tổng thành tiền: @Model.Sum(c => c.TamTinh).ToString("N0") đồng</p>*@
                </div>
            }
            else
            {
                <div class="d-flex flex-column text-end">
                    <p class="fw-bold float-end px-3">Tổng cộng: 0 đồng</p>
                </div>
            }
        </div>
        <div class="col-5 px-5 pt-5 border rounded-3 shadow-lg">
            <h2 class="text-center fw-bold pb-4">Thông tin sản phẩm</h2>
            <hr />
            <form action="/DanhSach" method="post">
                <div class="mb-4">
                    <label for="tensanpham" class="form-label fw-bolder">Tên sản phẩm</label>
                    <input type="text" class="form-control" id="tensanpham" name="tensanpham" value="" aria-describedby="text">
                </div>
                <div class="mb-4">
                    <label for="soluong" class="form-label fw-bolder">Số lượng</label>
                    <input type="number" class="form-control" id="soluong" name="soluong" value="" aria-describedby="text">
                </div>
                <div class="mb-5">
                    <label for="dongia" class="form-label fw-bolder">Đơn giá bán</label>
                    <input type="number" class="form-control" id="dongia" name="dongia" value="" aria-describedby="text">
                </div>
                <div class="mb-5">
                    <label for="giamgia" class="form-label fw-bolder">Giảm giá(%)</label>
                    <input type="number" class="form-control" id="dongia" name="giamgia" value="" aria-describedby="text">
                </div>
                <hr />
                <div class="d-flex align-items-center justify-content-center my-5 gap-5">
                    <button type="submit" id="themgiohang" class="btn btn-primary px-4 py-2">Thêm vào giỏ hàng</button>
                    <a type="button" id="thanhtoan" class="btn btn-outline-warning px-4 py-2" href="@Url.Action("Index","DanhSach", new { check = true})" onclick="HienThiThongBao()">Thanh toán</a>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    function HienThiThongBao(){
        var message = $('#TongThanhTien').text()
        alert(message)
    }
</script>

